<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor del Navbar con fondo negro -->
    <LinearLayout
        android:id="@+id/navbar_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black89"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/navbar_test"
            layout="@layout/navbar_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Fondo de pantalla -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lg_ofertafond"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@+id/navbar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor para centrar los botones -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonContainer"
        android:layout_width="610dp"
        android:layout_height="744dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightColumn"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar_container">

        <GridLayout
            android:id="@+id/gridButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:alpha="0.5"
                android:background="@drawable/test_btn_1"
                android:backgroundTint="@color/red89"
                android:enabled="false"
                android:text="ㅤ" />

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:alpha="0.5"
                android:background="@drawable/test_btn_2"
                android:backgroundTint="@color/yellow20"
                android:enabled="false"
                android:text="ㅤ" />

            <Button
                android:id="@+id/button3"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:alpha="0.5"
                android:background="@drawable/test_btn_3"
                android:backgroundTint="@color/bluedark"
                android:enabled="false"
                android:text="ㅤ" />

            <Button
                android:id="@+id/button4"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:alpha="0.5"
                android:background="@drawable/test_btn_4"
                android:backgroundTint="@color/greendark"
                android:enabled="false"
                android:text="ㅤ" />
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Columna derecha (Spinner y CardView) -->
    <LinearLayout
        android:id="@+id/rightColumn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonContainer"
        app:layout_constraintHorizontal_weight="1"
        android:layout_margin="16dp">

        <Spinner
            android:id="@+id/spinnerOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:enabled="false"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/receivedDataText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contenido de la tarjeta"
                android:background="@android:color/background_dark"
                android:gravity="center"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Botón flotante de Play -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Botón flotante de Reinicio (inicialmente invisible) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fabPlay"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>