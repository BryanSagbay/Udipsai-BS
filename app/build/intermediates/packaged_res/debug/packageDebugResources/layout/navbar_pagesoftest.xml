<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/black89"
    android:orientation="horizontal"
    android:gravity="center_vertical">


    <!-- Icono de regreso (Alineado a la izquierda) -->
    <ImageButton
        android:id="@+id/backIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:padding="8dp"/>


    <TextView
        android:id="@+id/universityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
       />

    <!-- Espaciador para empujar las imágenes a la derecha -->
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <!-- Contenedor de imágenes alineadas a la derecha -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <!-- Logo izquierdo -->

        <!-- Espaciado pequeño entre logos -->
        <ImageView
            android:id="@+id/logoLeft"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/lg_ucacuelogo" />

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- Logo derecho -->
        <ImageView
            android:id="@+id/logoRight"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/lg_udipsai"/>

    </LinearLayout>

</LinearLayout>
