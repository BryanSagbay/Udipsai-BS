<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.test.test_Palanca">

    <!-- Guía vertical para dividir la pantalla en dos columnas -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>  <!-- 40% de la pantalla para la columna izquierda -->

    <!-- Botón Enviar M1 -->
    <Button
        android:id="@+id/button_enviar_m1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar M1"
        android:padding="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

    <!-- Botón Enviar M2 -->
    <Button
        android:id="@+id/button_enviar_m2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar M2"
        android:padding="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_enviar_m1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

    <!-- Botón Enviar M3 -->
    <Button
        android:id="@+id/button_enviar_m3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:text="Enviar M3"
        app:layout_constraintTop_toBottomOf="@id/button_enviar_m2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter" />

    <!-- Botón Regresar (Debajo de M3) -->
    <Button
        android:id="@+id/button_regresar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:text="Regresar"
        app:layout_constraintTop_toBottomOf="@id/button_enviar_m3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter" />

    <!-- CardView para mostrar los datos -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_datos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esperando datos..."
            android:textSize="18sp"
            android:padding="16dp"
            android:textColor="@android:color/black"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
