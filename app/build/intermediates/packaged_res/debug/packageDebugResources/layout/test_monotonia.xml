<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.test.test_Palanca">

    <!-- Guía vertical -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <!-- Botones de colores deshabilitados inicialmente -->
    <Button
        android:id="@+id/button_aletorio"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Aleatoriamente"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:enabled="false"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

    <Button
        android:id="@+id/button_horario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Horario"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/button_aletorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

    <Button
        android:id="@+id/button_Antihorario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Antihorario"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/button_horario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

    <!-- Corrección: Se cambia a `Top_toBottomOf` para evitar superposición -->
    <Button
        android:id="@+id/button_rojo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Rojo"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/button_Antihorario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>


    <Button
        android:id="@+id/button_amarillo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Amarillo"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/button_rojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

    <Button
        android:id="@+id/button_azul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Azul"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/button_amarillo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

    <Button
        android:id="@+id/button_verde"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Verde"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/button_azul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>

    <Button
        android:id="@+id/button_regresar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:padding="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_verde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"/>


    <!-- Spinner para selección -->
    <Spinner
        android:id="@+id/spinner_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/card_datos"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent"
        android:enabled="false"/>

    <!-- CardView para mostrar datos -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_datos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/spinner_options"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esperando datos..."
            android:textSize="18sp"
            android:padding="16dp"
            android:textColor="@android:color/black"/>
    </androidx.cardview.widget.CardView>

    <!-- Botón flotante Play -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Botón flotante Reiniciar (Oculto al inicio) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fab_play"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
